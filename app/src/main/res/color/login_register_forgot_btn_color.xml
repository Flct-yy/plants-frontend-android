<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 默认状态 (可点击) -->
    <item android:state_enabled="true" android:color="#424242" /> <!-- 深灰色文字 -->

    <!-- 不可点击状态 -->
    <item android:state_enabled="false" android:color="#9E9E9E" /> <!-- 中等灰色文字 -->

    <!-- 按下状态 -->
    <item android:state_pressed="true" android:color="#212121" /> <!-- 更深的灰色/接近黑色 -->
</selector>